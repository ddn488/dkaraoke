<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<mvc:annotation-driven />
	<context:component-scan base-package="dennis.dkaraoke" />
	<context:component-scan base-package="dennis.dkaraoke.controller" />

	<!-- This tag allows for mapping the DispatcherServlet to "/" (thus overriding 
		the mapping of the container's default Servlet), while still allowing STATIC  
		resource (html, jpg etc..) requests to be handled by the container's default Servlet. -->

	<mvc:default-servlet-handler />

</beans>